<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ref_plaestany" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_titol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:text="PLA DE L'ESTANY"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_subtitol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_titol"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="75dp"
            android:text="Habitants del Pla de l'Estany"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_muni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subtitol"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="75dp"
            android:text="Selecciona el municipi"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/idButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:text="Busca"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_totalhab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_titol"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="75dp"
            android:text="32.293"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_numhab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_totalhab"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="75dp"
            android:text="NÃºmero d'habitants"
            android:textSize="20sp"
            android:textColor="@color/white"/>


        <AutoCompleteTextView
            android:id="@+id/tv_Entrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_muni"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:hint="Selecciona el municipi"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/nHabitants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_numhab"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="35dp"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/white"/>


    </RelativeLayout>

</LinearLayout>